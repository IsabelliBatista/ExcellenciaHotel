
@{
    ViewData["Title"] = "Excellencia Hotel";
}

<head>
    <link rel="stylesheet" href="@Url.Content("~/css/cadastro.css")" />
</head>
<body>
    <div class="banner-cadastro">
        <div class="modal-registro">
            <h1>CRIE UMA CONTA</h1>
            <form asp-action="Verificar" method="post" class="form">
                <div class="form-group">
                    <input type="text" placeholder="Nome" name="nome" />
                </div>
                <div>
                    <input type="email" placeholder="E-mail" name="email" /> 
                </div>
                <div>
                    <input type="password" placeholder="Senha" name="senha" />
                </div>
                <div class="button-entrar">
                    <input type="submit" class="btn btn-success" value="CONFIRMAR" />
                </div>
                <div class="fazer-login">
                    <p>Ja tem Conta?</p>
                    <span>Fazer Login</span>
                </div>
            </form>
    </div>
    </div>

</body>

