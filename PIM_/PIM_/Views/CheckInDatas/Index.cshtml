
@{
    ViewData["Title"] = "Datas";
}



<head>
    <link rel="stylesheet" href="@Url.Content("~/css/checkin.css")" />
</head>

<body>
    <div class="banner-check">
        <h2 class="h2 fw-bolder">Reserva</h2>
    </div>
    <nav>
        <div class="container">
            <div class="progress">
                <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Quarto</div>
            </div>
        </div>
    </nav>
    <main>
        <div class="container">
            <div class="row g-0 bg-light position-relative">
                <div class="col-md-6 mb-md-0 p-md-4">
                    <img src="~/image/img-galeria4.png" class="w-100" alt="...">
                </div>
                <div class="col-md-6 p-4 ps-md-0">
                    <h5 class="mt-0 fw-bolder">Quarto Family</h5>
                    <p>3 Camas, 2 banheiros, uma sala, uma área de lazer, em frente da piscina</p>

                    <div class="col-md-5">
                        <label for="validationCustom01" class="form-label fs-5 fw-bolder">Quantidade de Pessoas</label>
                        <input type="text" class="form-control" id="validationCustom01" placeholder="Digite números" required>
                        <br>
                        <h5 class="mt-0 fw-bolder">Diária</h5>
                        <p>R$ 00,00</p>
                    </div>
                </div>
            </div>
            <div class="row g-3 datas">
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label fs-5 fw-bolder">Check In</label>
                    <input type="text" class="form-control" id="validationCustom01" placeholder="dd/mm/aaaa" required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label fs-5 fw-bolder">Check Out</label>
                    <input type="text" class="form-control" id="validationCustom01" placeholder="dd/mm/aaaa" required>
                </div>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto btn-enviar">
                <a class="btn btn-success" href="/CheckInConfirmar">Avançar</a>
            </div>
        </div>
    </main>

</body>

